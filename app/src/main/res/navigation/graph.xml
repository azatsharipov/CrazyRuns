<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/graph"
    app:startDestination="@id/startMenuFragment">

    <fragment
        android:id="@+id/gameFragment"
        android:name="com.example.crazyruns.game.GameFragment"
        android:label="fragment_game"
        tools:layout="@layout/fragment_game" />
    <fragment
        android:id="@+id/startMenuFragment"
        android:name="com.example.crazyruns.mainMenu.StartMenuFragment"
        android:label="fragment_start_menu"
        tools:layout="@layout/fragment_start_menu" >
        <action
            android:id="@+id/toGameFragment"
            app:destination="@id/gameFragment" />
    </fragment>
    <fragment
        android:id="@+id/speedFragment"
        android:name="com.example.crazyruns.game.SpeedFragment"
        android:label="fragment_speed"
        tools:layout="@layout/fragment_speed" >
        <action
            android:id="@+id/backToGameFragment"
            app:destination="@id/gameFragment" />
    </fragment>
    <fragment
        android:id="@+id/raceFragment"
        android:name="com.example.crazyruns.game.RaceFragment"
        android:label="fragment_race"
        tools:layout="@layout/fragment_race" />
    <fragment
        android:id="@+id/reactionFragment"
        android:name="com.example.crazyruns.game.ReactionFragment"
        android:label="fragment_reaction"
        tools:layout="@layout/fragment_reaction" />
    <fragment
        android:id="@+id/staminaFragment"
        android:name="com.example.crazyruns.game.StaminaFragment"
        android:label="fragment_stamina"
        tools:layout="@layout/fragment_stamina" />
    <fragment
        android:id="@+id/agilityFragment"
        android:name="com.example.crazyruns.game.AgilityFragment"
        android:label="fragment_agility"
        tools:layout="@layout/fragment_agility" />
    <fragment
        android:id="@+id/raceResultFragment"
        android:name="com.example.crazyruns.game.RaceResultFragment"
        android:label="fragment_race_result"
        tools:layout="@layout/fragment_race_result" />
    <fragment
        android:id="@+id/waitingOponentsFragment"
        android:name="com.example.crazyruns.game.WaitingOponentsFragment"
        android:label="fragment_waiting_oponents"
        tools:layout="@layout/fragment_waiting_oponents" />
</navigation>