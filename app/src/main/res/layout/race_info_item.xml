<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/border_margin"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_race_info_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_weight="1"
        android:text="10"
        android:textSize="@dimen/common_text"/>

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_weight="8"
        android:layout_marginLeft="@dimen/border_margin"
        android:text="100m"
        android:textSize="@dimen/common_text"/>

    <TextView
        android:id="@+id/tv_jumps_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_weight="4"
        android:layout_marginLeft="@dimen/border_margin"
        android:text="2 jumps"
        android:textSize="@dimen/common_text"/>

</LinearLayout>